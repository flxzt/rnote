<?xml version="1.0" encoding="UTF-8"?>
<!-- Felix Zwettler 2021 <f.zwettler@posteo.de> -->
<component type="desktop-application">
  <id>@APP_ID@</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0</project_license>
  <name translatable="no">@APP_NAME_CAPITALIZED@</name>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <summary>A simple drawing application to create handwritten notes</summary>

  <categories>
    <category>Graphics</category>
    <category>Education</category>
    <category>Office</category>
    <category>VectorGraphics</category>
    <category>GNOME</category>
    <category>GTK</category>
  </categories>

  <description>
    <p>
      Rnote is a simple vector based drawing application for handwritten notes and to annotate documents and pictures.
    </p>
    <p>
      Disclaimer: The file format is still unstable. It might change between versions and break backward compatibility.
    </p>
  </description>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/flxzt/rnote/main/rnote-ui/data/screenshots/main_window_dark.png</image>
      <caption>Main window in light colors</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/flxzt/rnote/main/rnote-ui/data/screenshots/main_window_light.png</image>
      <caption>Main window in dark colors</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/flxzt/rnote/main/rnote-ui/data/screenshots/pdf_annotation.png</image>
      <caption>A PDF annotation</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/flxzt/rnote/main/rnote-ui/data/screenshots/selection.png</image>
      <caption>A selection</caption>
    </screenshot>
  </screenshots>

  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <url type="homepage">https://github.com/flxzt/rnote</url>
  <url type="bugtracker">https://github.com/flxzt/rnote/issues</url>
  <developer_name translatable="no">Felix Zwettler</developer_name>
  <update_contact>f.zwettler@posteo.de</update_contact>
  <content_rating type="oars-1.0" />

  <provides>
    <binary>@APP_NAME@</binary>
  </provides>

  <!-- /// Translators: Don't translate the changelog -->
  <releases>
    <release version="0.4.0" date="2022-03-17">
      <description>
        <p>this release changes:</p>
        <ul>
          <li>disclaimer: breaking file format compatibility</li>
          <li>feature: configurable button shortcuts (stylus, mouse)</li>
          <li>change: moved the marker into the brush pen as a style</li>
          <li>improvement: faster PDF export &amp; fix export with large sheet dimensions</li>
          <li>bug fixes</li>
        </ul>
      </description>
    </release>
    <release version="0.3.5" date="2022-02-14">
      <description>
        <p>this release changes:</p>
        <ul>
          <li>A new feature: infinite mode for expandable sheets in every direction</li>
        </ul>
      </description>
    </release>
    <release version="0.3.4" date="2022-02-06">
      <description>
        <p>this release changes:</p>
        <ul>
          <li>UI improvements</li>
        </ul>
      </description>
    </release>
    <release version="0.3.3" date="2022-02-05">
      <description>
        <p>this release changes:</p>
        <ul>
          <li>UX: Adaptive pen selection buttons (support smaller screens)</li>
        </ul>
      </description>
    </release>
    <release version="0.3.2" date="2022-02-02">
      <description>
        <p>this release changes:</p>
